<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shane.screenstest.AnimalsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Animal Sounds"
            android:id="@+id/header"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-50dp"
            android:textSize="30dp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bearla"
            android:id="@+id/english_text_button"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-55dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gaeilge"
            android:id="@+id/irish_text_button"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-55dp"
            android:layout_marginBottom="20dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BÃ³"
            android:id="@+id/cow_text"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Madra"
            android:id="@+id/dog_text"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:clickable="true" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="80dp"
            android:id="@+id/dog_button"
            android:layout_row="4"
            android:layout_column="2"
            android:src="@drawable/dog"
            android:layout_marginLeft="-30dp"
            android:layout_marginBottom="10dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lacha"
            android:id="@+id/duck_text"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:clickable="true" />

        <ImageView
            android:layout_width="61dp"
            android:layout_height="84dp"
            android:id="@+id/duck_button"
            android:layout_row="5"
            android:layout_column="2"
            android:src="@drawable/duck"
            android:layout_marginLeft="-30dp"
            android:layout_marginBottom="10dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Caorach"
            android:id="@+id/sheep_text"
            android:layout_row="6"
            android:layout_column="0"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:clickable="true" />

        <ImageView
            android:layout_width="57dp"
            android:layout_height="78dp"
            android:id="@+id/cow_button"
            android:layout_row="3"
            android:layout_column="2"
            android:src="@drawable/cow"
            android:layout_marginLeft="-30dp"
            android:layout_marginBottom="10dp"
            android:clickable="true" />

        <ImageView
            android:layout_width="67dp"
            android:layout_height="92dp"
            android:id="@+id/sheep_button"
            android:layout_row="6"
            android:layout_column="2"
            android:src="@drawable/sheep"
            android:layout_marginLeft="-30dp"
            android:clickable="true" />
    </GridLayout>
</RelativeLayout>
